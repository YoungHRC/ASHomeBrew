<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        card_view:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/colorPrimaryDark"
                android:id="@+id/view_topBorder"/>

            <TextView
                android:id="@+id/recipeName"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/colorPrimaryDarkest"
                android:textSize="25sp"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:text="Hammer of the Beast"/>

            <TextView
                android:id="@+id/beer_style"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/colorPrimaryDarkest"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="20sp"
                android:fontFamily="casual"
                android:text="Dark Coffee Stout"/>
            <TextView
                android:id="@+id/abv_ibu"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/colorPrimaryDarkest"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textSize="18sp"
                android:fontFamily="casual"
                android:text="12% ABV | 500 IBUs"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/colorPrimaryDark"
                android:layout_gravity="bottom"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>


